{# templates/main/home.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="mb-4 px-4 py-5 text-black bg-light">
	<h1 class="display-4">Trogon {% include "logo.html.twig" %}</h1>
	<p class="lead">Welcome to Trogon official webpage. Here you can fild information about ongoing projects.</p>
</div>

<div id="news" data-items-per-page="{{ itemsPerPage }}">
	<div class="row">
{% for item in news %}
		<div class="col-md-4">
			<div class="card mb-4 shadow-sm">
				<div class="card-header">
					{{ item.title }}
				</div>
				<div class="card-body">
					<p class="card-text">{{ item.summary | raw }}</p>
					<div class="d-flex justify-content-between align-items-center">
						{# <div class="btn-group">
							<button class="btn btn-sm btn-outline-secondary" type="button">Read more Â»</button>
						</div> #}
						<small class="text-muted">{{ item.createdOn | date }}</small>
					</div>
				</div>
			</div>
		</div>
{% endfor %}
	</div>
</div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
		{{ encore_entry_link_tags('news') }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
		{{ encore_entry_script_tags('news') }}
{% endblock %}
